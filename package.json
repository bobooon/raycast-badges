{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "badges",
  "title": "Badges",
  "type": "module",
  "description": "Show the macOS Dock badge counts in the menu bar.",
  "author": "Boboon",
  "license": "MIT",
  "icon": "extension-icon.png",
  "scripts": {
    "dev": "ray develop",
    "build": "ray build --output dist"
  },
  "dependencies": {
    "@raycast/api": "^1.104.3",
    "@raycast/utils": "^2.2.2"
  },
  "devDependencies": {
    "@tsconfig/node-ts": "^23.6.2",
    "@tsconfig/node24": "^24.0.4",
    "@tsconfig/recommended": "^1.0.13",
    "@types/react": "^19.2.10",
    "typescript": "^5.9.3"
  },
  "platforms": [
    "macOS"
  ],
  "commands": [
    {
      "name": "manage",
      "title": "Manage Badges",
      "description": "Manage application badges.",
      "mode": "view"
    },
    {
      "name": "menu",
      "title": "Menu Bar Badges",
      "description": "Show application badges in the menu bar.",
      "mode": "menu-bar",
      "interval": "10s"
    }
  ],
  "preferences": [
    {
      "name": "color",
      "title": "Color",
      "description": "Color of the menu bar icon when no applications have badges.",
      "type": "dropdown",
      "data": [
        {
          "title": "Text",
          "value": "raycast-primary-text"
        },
        {
          "title": "Muted",
          "value": "raycast-secondary-text"
        },
        {
          "title": "Blue",
          "value": "raycast-blue"
        },
        {
          "title": "Green",
          "value": "raycast-green"
        },
        {
          "title": "Magenta",
          "value": "raycast-magenta"
        },
        {
          "title": "Orange",
          "value": "raycast-orange"
        },
        {
          "title": "Purple",
          "value": "raycast-purple"
        },
        {
          "title": "Red",
          "value": "raycast-red"
        },
        {
          "title": "Yellow",
          "value": "raycast-yellow"
        }
      ],
      "default": "raycast-primary-text",
      "required": false
    },
    {
      "name": "activeColor",
      "title": "Active Color",
      "description": "Color of the menu bar icon when one or more applications have badges.",
      "type": "dropdown",
      "data": [
        {
          "title": "Text",
          "value": "raycast-primary-text"
        },
        {
          "title": "Muted",
          "value": "raycast-secondary-text"
        },
        {
          "title": "Blue",
          "value": "raycast-blue"
        },
        {
          "title": "Green",
          "value": "raycast-green"
        },
        {
          "title": "Magenta",
          "value": "raycast-magenta"
        },
        {
          "title": "Orange",
          "value": "raycast-orange"
        },
        {
          "title": "Purple",
          "value": "raycast-purple"
        },
        {
          "title": "Red",
          "value": "raycast-red"
        },
        {
          "title": "Yellow",
          "value": "raycast-yellow"
        }
      ],
      "default": "raycast-orange",
      "required": false
    }
  ]
}
